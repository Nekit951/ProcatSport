using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace ProcatSport
{
    public partial class Procat : Form
    {
        public Procat()
        {
            InitializeComponent();
        }

        internal void DisableTab(string v)
        {
            if (v == "ProkatTabPage")
            {
                ProkatTabPage.Enabled = false;
            }
            else if (v == "ClientTabPage")
            {
                ClientTabPage.Enabled = false;
            }
        }

        internal void SelectedTab(string v)
        {
            if (v == "ProkatTabPage")
            {
                tabControl1.SelectedTab = ProkatTabPage;
            }
            else if (v == "ClientTabPage")
            {
                tabControl1.SelectedTab = ClientTabPage;
            }
        } 

        private void button1_Click_1(object sender, EventArgs e)
        {
            if (tabControl1.SelectedTab == ClientTabPage)
            {
                Equipment equipment = new Equipment(false);
                equipment.ShowDialog();
            }
            else
            {
                Equipment equipment = new Equipment(true);
                equipment.ShowDialog();
            }
        }

        private void button2_Click_1(object sender, EventArgs e)
        {
            if (tabControl1.SelectedTab == ProkatTabPage)
            {
                Customers customers = new Customers(true);
                customers.ShowDialog();
            }
            else if (tabControl1.SelectedTab == ClientTabPage)
            {
                Customers customers = new Customers(false);
                customers.ShowDialog();
            }

        }

        private void button3_Click_1(object sender, EventArgs e)
        {
            if (tabControl1.SelectedTab == ProkatTabPage)
            {
                Vidacha vidacha = new Vidacha(true);
                vidacha.ShowDialog();
            }
            else if (tabControl1.SelectedTab == ClientTabPage)
            {
                Vidacha vidacha = new Vidacha(false);
                vidacha.ShowDialog();
            }
        }

        private void button4_Click_1(object sender, EventArgs e)
        {
            if (tabControl1.SelectedTab == ProkatTabPage)
            {
                Equipment equipment = new Equipment(true);
                equipment.ShowDialog();
            }
            else if (tabControl1.SelectedTab == ClientTabPage)
            {
                Equipment equipment = new Equipment(false);
                equipment.ShowDialog();
            }

        }

        private void button5_Click_1(object sender, EventArgs e)
        {
            if (tabControl1.SelectedTab == ProkatTabPage)
            {
                Customers customers = new Customers(true);
                customers.ShowDialog();
            }
            else if (tabControl1.SelectedTab == ClientTabPage)
            {
                Customers customers = new Customers(false);
                customers.ShowDialog();
            }
        }

        private void button6_Click_1(object sender, EventArgs e)
        {
            if (tabControl1.SelectedTab == ProkatTabPage)
            {
                Vidacha vidacha = new Vidacha(true);
                vidacha.ShowDialog();
            }
            else if (tabControl1.SelectedTab == ClientTabPage)
            {
                Vidacha vidacha = new Vidacha(false);
                vidacha.ShowDialog();
            }
        }
    }
}

using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;
using System.Data.SqlClient;

namespace ProcatSport
{
    public partial class Equipment : Form
    {
        private bool isProkat;
        
        public Equipment(bool isProkat)
        {
            InitializeComponent();
            this.isProkat = isProkat;

            DataTable equipmentTable = new DataTable();

            string connectionString = "Data Source=WIN-K60S1T67SO6\\SQLEXPRESS;Initial Catalog=ProcatSport;Integrated Security=True";
            using (SqlConnection connection = new SqlConnection(connectionString))
            {
                connection.Open();
                SqlCommand command = new SqlCommand("SELECT * FROM dbo.Equipment", connection);
                SqlDataAdapter adapter = new SqlDataAdapter(command);
                adapter.Fill(equipmentTable);
            }

            dataGridView1.DataSource = equipmentTable;
            dataGridView1.ReadOnly = true;
            this.dataGridView1.CellClick += new System.Windows.Forms.DataGridViewCellEventHandler(this.dataGridView1_CellClick);

            if (!isProkat)
            {
                button1.Visible = false;
                button2.Visible = false;
                button3.Visible = false;
                button4.Visible = false;
                button5.Visible = true;
            }
            else
            {
                button5.Visible = false;
            }

            
        }

        private void button1_Click(object sender, EventArgs e)
        {
            string connectionString = "Data Source=WIN-K60S1T67SO6\\SQLEXPRESS;Initial Catalog=ProcatSport;Integrated Security=True";

            using (SqlConnection connection = new SqlConnection(connectionString))
            {
                connection.Open();

                string query = "INSERT INTO dbo.Equipment (Id, Name, Price_day, Quantity, Arendovano) VALUES (@Id, @Name, @Price_day, @Quantity, @Arendovano)";

                using (SqlCommand command = new SqlCommand(query, connection))
                {
                    command.Parameters.AddWithValue("@Id", textBox1.Text);
                    command.Parameters.AddWithValue("@Name", textBox2.Text);
                    command.Parameters.AddWithValue("@Price_day", textBox3.Text);
                    command.Parameters.AddWithValue("@Quantity", textBox4.Text);
                    command.Parameters.AddWithValue("@Arendovano", textBox5.Text);

                    int rowsAffected = command.ExecuteNonQuery();

                    if (rowsAffected > 0)
                    {
                        MessageBox.Show("Данные успешно добавлены");


                        SqlDataAdapter dataAdapter = new SqlDataAdapter("SELECT * FROM dbo.Equipment", connection);
                        DataTable equipmentTable = new DataTable();
                        dataAdapter.Fill(equipmentTable);
                        dataGridView1.DataSource = equipmentTable;
                    }
                    else
                    {
                        MessageBox.Show("Ошибка добавления данных");
                    }
                }
            }
        }

        private void button2_Click(object sender, EventArgs e)
        {
            if (dataGridView1.SelectedRows.Count > 0)
            {
                string connectionString = "Data Source=WIN-K60S1T67SO6\\SQLEXPRESS;Initial Catalog=ProcatSport;Integrated Security=True";
                using (SqlConnection connection = new SqlConnection(connectionString))
                {
                    connection.Open();
                    int rowIndex = dataGridView1.SelectedRows[0].Index;
                    string Id = dataGridView1.Rows[rowIndex].Cells["Id"].Value.ToString();
                    string query = "UPDATE dbo.Equipment SET Id = @Id, Name = @Name, Price_day = @Price_day, Quantity = @Quantity, Arendovano = @Arendovano WHERE Id = @Id";
                    using (SqlCommand command = new SqlCommand(query, connection))
                    {
                        command.Parameters.AddWithValue("@Id", textBox1.Text);
                        command.Parameters.AddWithValue("@Name", textBox2.Text);
                        command.Parameters.AddWithValue("@Price_day", textBox3.Text);
                        command.Parameters.AddWithValue("@Quantity", textBox4.Text);
                        command.Parameters.AddWithValue("@Arendovano", textBox5.Text);

                        int rowsAffected = command.ExecuteNonQuery();
                        if (rowsAffected > 0)
                        {
                            MessageBox.Show("Данные успешно обновлены");

                            SqlDataAdapter dataAdapter = new SqlDataAdapter("SELECT * FROM dbo.Equipment", connection);
                            DataTable equipmentTable = new DataTable();
                            dataAdapter.Fill(equipmentTable);
                            dataGridView1.DataSource = equipmentTable;
                        }
                        else
                        {
                            MessageBox.Show("Ошибка обновления данных");
                        }
                    }
                }
            }
        }

        private void button3_Click(object sender, EventArgs e)
        {
            if (dataGridView1.SelectedRows.Count > 0)
            {
                string connectionString = "Data Source=WIN-K60S1T67SO6\\SQLEXPRESS;Initial Catalog=ProcatSport;Integrated Security=True";

                using (SqlConnection connection = new SqlConnection(connectionString))
                {
                    connection.Open();

                    int rowIndex = dataGridView1.SelectedRows[0].Index;
                    string Id = dataGridView1.Rows[rowIndex].Cells["Id"].Value.ToString();

                    string query = "DELETE FROM dbo.Equipment WHERE Id = @Id";

                    using (SqlCommand command = new SqlCommand(query, connection))
                    {
                        command.Parameters.AddWithValue("@Id", Id);
                        int rowsAffected = command.ExecuteNonQuery();

                        if (rowsAffected > 0)
                        {
                            MessageBox.Show("Данные успешно удалены");


                            SqlDataAdapter dataAdapter = new SqlDataAdapter("SELECT * FROM dbo.Equipment", connection);
                            DataTable equipmentTable = new DataTable();
                            dataAdapter.Fill(equipmentTable);
                            dataGridView1.DataSource = equipmentTable;
                        }
                        else
                        {
                            MessageBox.Show("Ошибка удаления данных");
                        }
                    }
                }
            }
        }

        private void button4_Click(object sender, EventArgs e)
        {
            DataTable changesTable = (DataTable)dataGridView1.DataSource;

            string connectionString = "Data Source=WIN-K60S1T67SO6\\SQLEXPRESS;Initial Catalog=ProcatSport;Integrated Security=True";
            using (SqlConnection connection = new SqlConnection(connectionString))
            {
                connection.Open();
                SqlCommand command = new SqlCommand("SELECT * FROM dbo.Equipment", connection);
                SqlDataAdapter adapter = new SqlDataAdapter(command);

                SqlCommandBuilder builder = new SqlCommandBuilder(adapter);

                adapter.UpdateCommand = builder.GetUpdateCommand();
                adapter.InsertCommand = builder.GetInsertCommand();
                adapter.DeleteCommand = builder.GetDeleteCommand();

                adapter.Update(changesTable);
            }

            MessageBox.Show("Данные успешно сохранены");
        }


        private void dataGridView1_CellClick(object sender, DataGridViewCellEventArgs e)
        {
            if (e.RowIndex >= 0 && e.ColumnIndex >= 0 && dataGridView1.Columns[e.ColumnIndex].Name == "Id")
            {
                DataGridViewRow selectedRow = dataGridView1.Rows[e.RowIndex];
                if (selectedRow != null)
                {
                    textBox1.Text = selectedRow.Cells["Id"].Value.ToString();
                    textBox2.Text = selectedRow.Cells["Name"].Value.ToString();
                    textBox3.Text = selectedRow.Cells["Price_day"].Value.ToString();
                    textBox4.Text = selectedRow.Cells["Quantity"].Value.ToString();
                    textBox5.Text = selectedRow.Cells["Arendovano"].Value.ToString();

                }
            }
            if (e.RowIndex >= 0 && e.ColumnIndex >= 0 && dataGridView1.Columns[e.ColumnIndex].Name == "Name")
            {
                DataGridViewRow selectedRow = dataGridView1.Rows[e.RowIndex];
                if (selectedRow != null)
                {
                    textBox1.Text = selectedRow.Cells["Id"].Value.ToString();
                    textBox2.Text = selectedRow.Cells["Name"].Value.ToString();
                    textBox3.Text = selectedRow.Cells["Price_day"].Value.ToString();
                    textBox4.Text = selectedRow.Cells["Quantity"].Value.ToString();
                    textBox5.Text = selectedRow.Cells["Arendovano"].Value.ToString();
                }
            }
            if (e.RowIndex >= 0 && e.ColumnIndex >= 0 && dataGridView1.Columns[e.ColumnIndex].Name == "Price_day")
            {
                DataGridViewRow selectedRow = dataGridView1.Rows[e.RowIndex];
                if (selectedRow != null)
                {
                    textBox1.Text = selectedRow.Cells["Id"].Value.ToString();
                    textBox2.Text = selectedRow.Cells["Name"].Value.ToString();
                    textBox3.Text = selectedRow.Cells["Price_day"].Value.ToString();
                    textBox4.Text = selectedRow.Cells["Quantity"].Value.ToString();
                    textBox5.Text = selectedRow.Cells["Arendovano"].Value.ToString();
                }
            }
            if (e.RowIndex >= 0 && e.ColumnIndex >= 0 && dataGridView1.Columns[e.ColumnIndex].Name == "Quantity")
            {
                DataGridViewRow selectedRow = dataGridView1.Rows[e.RowIndex];
                if (selectedRow != null)
                {
                    textBox1.Text = selectedRow.Cells["Id"].Value.ToString();
                    textBox2.Text = selectedRow.Cells["Name"].Value.ToString();
                    textBox3.Text = selectedRow.Cells["Price_day"].Value.ToString();
                    textBox4.Text = selectedRow.Cells["Quantity"].Value.ToString();
                    textBox5.Text = selectedRow.Cells["Arendovano"].Value.ToString();
                }
            }
            if (e.RowIndex >= 0 && e.ColumnIndex >= 0 && dataGridView1.Columns[e.ColumnIndex].Name == "Arendovano")
            {
                DataGridViewRow selectedRow = dataGridView1.Rows[e.RowIndex];
                if (selectedRow != null)
                {
                    textBox1.Text = selectedRow.Cells["Id"].Value.ToString();
                    textBox2.Text = selectedRow.Cells["Name"].Value.ToString();
                    textBox3.Text = selectedRow.Cells["Price_day"].Value.ToString();
                    textBox4.Text = selectedRow.Cells["Quantity"].Value.ToString();
                    textBox5.Text = selectedRow.Cells["Arendovano"].Value.ToString();
                }
            }
        }

        private void button5_Click(object sender, EventArgs e)
        {
            if (dataGridView1.SelectedCells.Count > 0)
            {
                int selectedrowindex = dataGridView1.SelectedCells[0].RowIndex;
                DataGridViewRow selectedRow = dataGridView1.Rows[selectedrowindex];

                int arendovano = Convert.ToInt32(selectedRow.Cells["Arendovano"].Value);
                int quantity = Convert.ToInt32(selectedRow.Cells["Quantity"].Value);

                arendovano++;
                quantity--;

                selectedRow.Cells["Arendovano"].Value = arendovano;
                selectedRow.Cells["Quantity"].Value = quantity;

                // Update the database with the new values
                string connectionString = "Data Source=WIN-K60S1T67SO6\\SQLEXPRESS;Initial Catalog=ProcatSport;Integrated Security=True";
                using (SqlConnection connection = new SqlConnection(connectionString))
                {
                    connection.Open();
                    SqlCommand command = new SqlCommand("UPDATE dbo.Equipment SET Arendovano = @Arendovano, Quantity = @Quantity WHERE Id = @Id", connection);
                    command.Parameters.AddWithValue("@Arendovano", arendovano);
                    command.Parameters.AddWithValue("@Quantity", quantity);
                    command.Parameters.AddWithValue("@Id", selectedRow.Cells["Id"].Value);
                    command.ExecuteNonQuery();
                }
            }
        }
    } 
}

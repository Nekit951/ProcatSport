using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace ProcatSport
{
    public partial class Authorization : Form
    {

        public Authorization()
        {
            InitializeComponent();
        }

        
        private void button1_Click(object sender, EventArgs e)
        {
            Procat procat = new Procat();

            if (textBox1.Text == "admin" && textBox2.Text == "123")
            {
                procat.SelectedTab("ProkatTabPage");
                procat.Show();
                procat.DisableTab("ClientTabPage");
                this.Hide();
            }
            else if (textBox1.Text == "klient" && textBox2.Text == "124")
            {
                procat.SelectedTab("ClientTabPage");
                procat.Show();
                procat.DisableTab("ProkatTabPage");
                this.Hide();
            }
            else
            {
                MessageBox.Show("Неверный логин или пароль.");
            }
        }

        private void label4_Click(object sender, EventArgs e)
        {
            Register register = new Register();
            register.Show();
            this.Hide();
        }
    }
}
